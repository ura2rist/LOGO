<%- include('../layout/header.ejs') %>
<div class="wrapper breadcrumbs-wrapper">
  <ul class="breadcrumbs">
    <li class="breadcrumbs__item">
      <a href="#" class="breadcrumbs__link">Главная</a>
    </li>
    <li class="breadcrumbs__item">
      <a href="#" class="breadcrumbs__link">Оформление заказа</a>
    </li>
  </ul>
</div>
<main class="main">
  <section class="payment">
    <div class="wrapper payment__wrapper">
      <div class="products">
        <div class="products__title-wrapper">
          <h1 class="main-title products__title">Оформление заказа</h1>
          <span class="products__account-message">Есть аккаунт?<a href="#" class="products__account-link">Войти</a></span>
        </div>
        <div class="products__amount">
          <p class="products__amount-text">3 товара на сумму 25 000 ₽</p>
        </div>
        <div class="products__info products__info_arrow">
          <div class="products__info-wrapper">
            <img src="../assets/image/photo_one.png" alt="#" class="products__img">
            <h3 class="products__name">Утепленная стеганная куртка женская Top Hills</h3>
            <div class="products__charact-wrapper">
              <div class="products__charact"><span class="products__charact-name">Артикул</span> <span class="products__charact-description">512-05</span></div>
              <div class="products__charact"><span class="products__charact-name">Сезон</span> <span class="products__charact-description">Осень-зима</span></div>
              <ul class="products__size-list">
                <li class="products__size-item">
                  <input type="radio" name="size" value="XS" id="xs" class="products__size-radio">
                  <label for="xs" class="products__size-text">XS</label>
                </li>
                <li class="products__size-item">
                  <input type="radio" name="size" value="S" id="s" class="products__size-radio">
                  <label for="s" class="products__size-text">S</label>
                </li>
                <li class="products__size-item">
                  <input type="radio" name="size" value="M" id="m" class="products__size-radio" checked>
                  <label for="m" class="products__size-text">M</label>
                </li>
                <li class="products__size-item">
                  <input type="radio" name="size" value="L" id="l" class="products__size-radio">
                  <label for="l" class="products__size-text">L</label>
                </li>
                <li class="products__size-item">
                  <input type="radio" name="size" value="XL" id="xl" class="products__size-radio">
                  <label for="xl" class="products__size-text">XL</label>
                </li>
              </ul>
              <ul class="products__color-list">
                <li class="products__color-item">
                  <input type="radio" name="color" value="#444444" id="color_one" class="products__color-radio" checked>
                  <label for="color_one" class="products__color" style="background-color: #444444;"></label>
                </li>
                <li class="products__color-item">
                  <input type="radio" name="color" value="#106DA2" id="color_two" class="products__color-radio">
                  <label for="color_two" class="products__color" style="background-color: #106DA2;"></label>
                </li>
                <li class="products__color-item">
                  <input type="radio" name="color" value="#AE6D0C" id="color_three" class="products__color-radio">
                  <label for="color_three" class="products__color" style="background-color: #AE6D0C;"></label>
                </li>
              </ul>
            </div>
            <div class="products__count-wrapper">
              <div class="products__count-price">
                <p class="products__count-old">12 000 ₽</p>
                <p class="products__count-new">10 000 ₽</p>
              </div>
              <div class="products__count-number number">
                <div class="number__decrement"></div>
                <input type="number" class="number__input" value="2" min="1">
                <div class="number__increment"></div>
              </div>
              <div class="products__count-price">
                <p class="products__count-old">24 000 ₽</p>
                <p class="products__count-new">20 000 ₽</p>
              </div>
            </div>
          </div>
          <svg class="products__arrow" width="102" height="24" viewBox="0 0 102 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M101.061 13.0607C101.646 12.4749 101.646 11.5251 101.061 10.9393L91.5147 1.3934C90.9289 0.807611 89.9792 0.807611 89.3934 1.3934C88.8076 1.97919 88.8076 2.92893 89.3934 3.51472L97.8787 12L89.3934 20.4853C88.8076 21.0711 88.8076 22.0208 89.3934 22.6066C89.9792 23.1924 90.9289 23.1924 91.5147 22.6066L101.061 13.0607ZM0 13.5H100V10.5H0V13.5Z" fill="black"/>
          </svg>
          <div class="products__info-delete">
            <span class="products__info-line"></span>
            <span class="products__info-line"></span>
          </div>
        </div>
        <div class="products__info">
          <div class="products__info-wrapper products__delete">
            <div class="products__delete-wrapper">
              <p class="products__delete-message">Товар <span class="products__delete-name">Наименование товара</span> был удален из корзины.</p><button class="products__delete-btn">Восстановить</button>
              <div class="products__info-delete">
                <span class="products__info-line"></span>
                <span class="products__info-line"></span>
              </div>
            </div>
          </div>
        </div>
        <div class="products__info">
          <div class="products__info-wrapper">
            <img src="../assets/image/photo_two.png" alt="#" class="products__img">
            <h3 class="products__name">Вязанная шапка Zolla</h3>
            <div class="products__charact-wrapper">
              <div class="products__charact"><span class="products__charact-name">Артикул</span> <span class="products__charact-description">891-256</span></div>
              <div class="products__charact"><span class="products__charact-name">Сезон</span> <span class="products__charact-description">Демисезон</span></div>
              <ul class="products__size-list">
                <li class="products__size-item">
                  <input type="radio" name="size-q" value="XS" id="xs-q" class="products__size-radio">
                  <label for="xs-q" class="products__size-text">XS</label>
                </li>
                <li class="products__size-item">
                  <input type="radio" name="size-q" value="S" id="s-q" class="products__size-radio" checked>
                  <label for="s-q" class="products__size-text">S</label>
                </li>
                <li class="products__size-item">
                  <input type="radio" name="size-q" value="M" id="m-q" class="products__size-radio">
                  <label for="m-q" class="products__size-text">M</label>
                </li>
                <li class="products__size-item">
                  <input type="radio" name="size-q" value="L" id="l-q" class="products__size-radio" disabled>
                  <label for="l-q" class="products__size-text">L</label>
                </li>
                <li class="products__size-item">
                  <input type="radio" name="size-q" value="XL" id="xl-q" class="products__size-radio" disabled>
                  <label for="xl-q" class="products__size-text">XL</label>
                </li>
              </ul>
              <ul class="products__color-list">
                <li class="products__color-item">
                  <input type="radio" name="color-q" value="#444444" id="color_one-q" class="products__color-radio" checked>
                  <label for="color_one-q" class="products__color" style="background-color: #444444;"></label>
                </li>
              </ul>
            </div>
            <div class="products__count-wrapper">
              <div class="products__count-price">
                <p class="products__count-new">500 ₽</p>
              </div>
              <div class="products__count-number number">
                <div class="number__decrement"></div>
                <input type="number" class="number__input" value="1" min="1">
                <div class="number__increment"></div>
              </div>
              <div class="products__count-price">
                <p class="products__count-new">500 ₽</p>
              </div>
            </div>
          </div>
          <div class="products__info-delete">
            <span class="products__info-line"></span>
            <span class="products__info-line"></span>
          </div>
        </div>
      </div>
      <div class="total">
        <div class="total__wrapper">
          <ul class="total__list">
            <li class="total__item">
              <p class="total__name">Товары</p><p class="total__count">24 500 ₽</p>
            </li>
            <li class="total__item">
             <p class="total__name">Скидка</p><p class="total__count">- 4 500 ₽</p>
            </li>
            <li class="total__item">
              <p class="total__name">Акции</p><p class="total__count">- 4 000 ₽</p>
            </li>
            <li class="total__item">
              <p class="total__name">Промокод</p><p class="total__count">- 500 ₽</p>
            </li>
            <li class="total__item">
              <p class="total__name">Доставка</p><p class="total__count">200 ₽</p>
            </li>
          </ul>
          <div class="total__stock">
            <div class="total__stock-text">
              <p class="total__stock-title">Получить товар со склада</p>
              <p class="total__stock-description">Сроки получения могут измениться</p>
            </div>
            <div class="toggler">
              <div class="toggler__wrapper"></div>
            </div>
          </div>
          <div class="total__results">
            <p class="total__results-title">Итого:</p>
            <p class="total__results-description">20 700 ₽</p>
          </div>
          <div class="total__promo">
            <div class="input-wrapper input-error">
              <input type="text" placeholder="Введите промокод">
              <p class="input-error__message">Подпись</p>
              <p class="input-success__message">Подпись</p>
            </div>
          </div>
          <div class="total__design">
            <input type="button" placeholder="Введите промокод" class="btn total__btn" value="Оформить заказ">
          </div>
          <div class="total__agreement">
            <p class="total__agreement-text">Нажимая кнопку “Оформить заказ”, Вы соглашаетесь с <a class="total__agreement-link" href="#">политикой конфиденциальности.</a></p>
          </div>
        </div>
      </div>
      <div class="data">
        <div class="data__inputs">
          <h2 class="title data__inputs-title">Контактные данные</h2>
          <div class="input-wrapper">
            <input type="text" placeholder="Имя">
            <span class="input-header">Имя</span>
          </div>
          <div class="input-wrapper">
            <input type="text" placeholder="Фамилия">
            <span class="input-header">Фамилия</span>
          </div>
          <div class="input-wrapper">
            <input type="text" placeholder="Телефон">
            <span class="input-header">Телефон</span>
          </div>
          <div class="input-wrapper">
            <input type="text" placeholder="Email">
            <span class="input-header">Email</span>
          </div>
          <div class="input-wrapper data__address">
            <input type="text" placeholder="Адрес доставки" class="address">
            <span class="input-header">Адрес доставки</span>
            <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M14.6033 14.6031L18.2858 18.2857" stroke="black" stroke-linejoin="round"/>
              <path d="M16.4444 9.07927C16.4444 13.1469 13.147 16.4443 9.07939 16.4443C5.01179 16.4443 1.71436 13.1469 1.71436 9.07927C1.71436 5.01167 5.01179 1.71423 9.07939 1.71423C13.147 1.71423 16.4444 5.01167 16.4444 9.07927Z" stroke="black"/>
            </svg>
          </div>
        </div>
        <div class="data__map" id="map-1"></div>
        <div class="data__payment">
          <h2 class="title">Оплата</h2>
          <ul class="data__payment-group">
            <li class="data__payment-item">
              <label class="radio">
                <input type="radio" name="payment" value="Наличными курьеру" class="radio__input" checked>
                <span class="radio__text">Наличными курьеру</span>
              </label>
            </li>
            <li class="data__payment-item">
              <label class="radio">
                <input type="radio" name="payment" value="Картой курьеру" class="radio__input">
                <span class="radio__text">Картой курьеру</span>
              </label>
            </li>
            <li class="data__payment-item">
              <label class="radio">
                <input type="radio" name="payment" value="Картой онлайн" class="radio__input">
                <span class="radio__text">Картой онлайн</span>
              </label>
            </li>
          </ul>
        </div>
        <div class="data__comment">
          <h2 class="title">Комментарий к заказу</h2>
          <div class="input-wrapper input-textarea">
            <textarea name="" id="" cols="30" rows="6" placeholder="Комментарий к заказу"></textarea>
            <span class="input-header">Комментарий к заказу</span>
            <p class="input-textarea__text">Использовано <span class="input-textarea__count">0</span>/142 символов</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>
<%- include('../layout/footer.ejs') %>